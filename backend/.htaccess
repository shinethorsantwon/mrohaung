RewriteEngine On
RewriteBase /

# If the file exists on disk, serve it directly (important for deploy.php)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise, proxy to Node.js on standard port 3000
RewriteRule ^(.*)$ http://127.0.0.1:3000/$1 [P,L]
